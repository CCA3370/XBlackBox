{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "XBlackBox Viewer",
  "version": "1.0.0",
  "identifier": "com.xblackbox.viewer",
  "build": {
    "frontendDist": "../static",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "XBlackBox Viewer",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 1024,
        "minHeight": 768,
        "dragDropEnabled": false,
        "theme": "Dark",
        "titleBarStyle": "Visible",
        "label": "main",
        "contextMenu": false
      }
    ],
    "security": {
      "csp": null,
      "freezePrototype": false
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "3370Tech",
    "copyright": "Copyright (c) 2026 3370Tech",
    "category": "Utility",
    "shortDescription": "XBlackBox Flight Data Recorder Viewer",
    "longDescription": "XBlackBox XDR Viewer - Professional flight data analysis tool for X-Plane XDR files",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installMode": "currentUser",
        "languages": ["English", "SimpChinese"],
        "displayLanguageSelector": true
      }
    }
  }
}
