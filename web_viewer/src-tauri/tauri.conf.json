{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "XBlackBox Viewer",
  "version": "1.0.0",
  "identifier": "com.xblackbox.viewer",
  "build": {
    "frontendDist": "../static",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "XBlackBox Viewer",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 1024,
        "minHeight": 768,
        "fileDropEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [],
      "freezePrototype": false
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "XBlackBox",
    "copyright": "Copyright (c) 2024 XBlackBox",
    "category": "Utility",
    "shortDescription": "Flight Data Recorder Viewer",
    "longDescription": "XBlackBox XDR Viewer - Professional flight data analysis tool for X-Plane FDR files",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "license": null,
        "installerIcon": null,
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser",
        "languages": ["en-US", "zh-CN"],
        "displayLanguageSelector": true
      }
    }
  }
}
